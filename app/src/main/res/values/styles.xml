<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#BEBEBE</item>
    </style>-->


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowBackground">@color/color_primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/color_accent</item>
    </style>


    <style name="Material.Drawable.Ripple">
        <item name="rd_enable">true</item>
        <item name="rd_inInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="rd_outInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">2dp</item>
        <item name="rd_padding">0dp</item>
    </style>

    <style name="Material.Drawable.Ripple.Touch" parent="Material.Drawable.Ripple">
        <item name="rd_backgroundColor">@color/primary_darker</item>
        <item name="rd_backgroundAnimDuration">200</item>
        <item name="rd_maxRippleRadius">48dp</item>

        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_rippleType">touch</item>
    </style>

    <style name="Material.Drawable.Ripple.Touch.MatchView" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_maxRippleRadius">match_view</item>
    </style>

    <style name="Material.Drawable.Ripple.Touch.Light" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_backgroundColor">@color/color_primary_dark</item>
        <item name="rd_rippleColor">@color/ripple</item>
    </style>

    <style name="Material.Drawable.Ripple.Touch.MatchView.Light" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_maxRippleRadius">match_view</item>
        <item name="rd_backgroundColor">@color/color_primary_dark</item>
        <item name="rd_rippleColor">@color/ripple</item>
    </style>

    <style name="Material.Drawable.Ripple.Wave" parent="Material.Drawable.Ripple">
        <item name="rd_maxRippleRadius">48dp</item>
        <item name="rd_rippleColor">@color/color_primary</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_rippleType">wave</item>
    </style>

    <style name="Material.Drawable.Ripple.Wave.Light" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">@color/color_primary</item>
    </style>



    <style name="Background">
        <item name="android:background">#fff</item>
    </style>

    <!-- Tema para los TextView que hacen de títulos de las secciones. -->
    <style name="TitleBarItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/list_header_borders</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#fff</item>
    </style>

    <!-- Tema para las imagenes usadas en los ListViewItem. -->
    <style name="ListViewItemImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Tema para las títulos usados en los ListViewItem. -->
    <style name="ListViewItemTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- Tema para las subtítulos usados en los ListViewItem. -->
    <style name="ListViewItemSubTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">#000</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_small</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="starRatingBarLarge" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_large</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="extraSmall">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FlatWaveColorButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#20d3d3d3</item>
        <item name="rd_cornerRadius">50dp</item>
    </style>


    <style name="FlatWaveColorButtonRippleStyleSave" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#20d3d3d3</item>
        <item name="rd_cornerRadius">4dp</item>
    </style>

</resources>
